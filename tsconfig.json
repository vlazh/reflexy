{
  "extends": "@vzh/configs/ts/common.tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "isolatedModules": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": false,
    "incremental": false,
    "diagnostics": true,
    "typeRoots": ["node_modules/@types", "node_modules/@vlazh/styled-components/@types"],
    "types": ["css-modules", "styled-components"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
